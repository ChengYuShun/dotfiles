[font]
{{ if eq .chezmoi.os "darwin" -}}
size = 13
{{- else -}}
size = 9.5
{{- end }}

[font.normal]
{{ if eq .chezmoi.os "darwin" -}}
family = "SF Mono"
{{- else -}}
family = "monospace"
{{- end }}

[colors.primary]
background = "#000000"
foreground = "#eaeaea"

[font.offset]
x = 0
y = 0

[colors.cursor]
cursor = "#e7c547"
text = "#424242"

[colors.bright]
black = "#424242"
blue = "#7aa5da"
cyan = "#70c0b1"
green = "#b9ca4a"
magenta = "#c397d8"
red = "#d54e53"
white = "#eaeaea"
yellow = "#e7c547"

[colors.normal]
black = "#000000"
blue = "#7aa5da"
cyan = "#70c0b1"
green = "#b9ca4a"
magenta = "#c397d8"
red = "#d54e53"
white = "#eaeaea"
yellow = "#e7c547"

[scrolling]
multiplier = {{ if eq .cys.desktop "KDE" -}}
    6
{{- else if eq .chezmoi.os "darwin" -}}
    1
{{- else -}}
    10
{{- end }}
